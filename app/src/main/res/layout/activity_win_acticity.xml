<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.doanchu.Activity_Chienthang">

    <TextView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:id="@+id/textright"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/englishmiqi"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#ff0000"
        android:text="English Primary"
        android:layout_height="40dp" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/englishmiqi"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageView
            android:background="@drawable/win"
            android:layout_width="match_parent"
            android:layout_height="400dp" />
        <TextView
            android:id="@+id/result"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="130dp"
            android:textColor="#ff0000"
            android:textSize="40dp"
            android:text="Score: 8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="Too bad"
            android:textSize="25dp"
            android:textColor="#ff0000"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/nsthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/tieptuc"
        android:text="Next"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</RelativeLayout>